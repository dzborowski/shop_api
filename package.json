    "typescript": "^4.0.3"
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "celebrate": "^13.0.3",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "helmet": "^4.1.1",
