  "scripts": {
    "dev": "NODE_ENV=dev ts-node-dev ./src/index.ts",
    "prod": "rm -rf ./build && tsc && NODE_ENV=prod node ./build/src/index.js",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -n",
    "tslint": "tslint --project tsconfig.json --config tslint.json --exclude **/migration/*.ts",
    "tslint-fix": "tslint --project tsconfig.json --config tslint.json --exclude **/migration/*.ts --fix",
    "prettier": "prettier --config .prettierrc.json --check ./src/**/*.ts",
    "prettier-fix": "prettier --config .prettierrc.json --write ./src/**/*.ts"
  }
}
